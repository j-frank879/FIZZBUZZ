@page
@model FIZZBUZZ.Pages.Baza.IndexModel
@inject SignInManager<IdentityUser> SignInManager
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dane[0].Liczba)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dane[0].Komunikat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dane[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dane[0].Name_User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Dane)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Liczba)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Komunikat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name_User)
                </td>
                @if (SignInManager.IsSignedIn(User))
                {
                    @if (String.Equals((item.Name_User), (@User.Identity.Name)))
                    {
                        <td>
                            |
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    }
                }
            </tr>
        }
    </tbody>
</table>
